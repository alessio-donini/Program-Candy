        <div class="col-12 col-md-6 col-lg-3 caramella">
            <a asp-page="/Prodotto" asp-route-ID="caramella_rossa"><img class="caramellaimg" src="~/images/caramella-spiro-fucsia-cm-40x82x10-h.jpg" /></a>
