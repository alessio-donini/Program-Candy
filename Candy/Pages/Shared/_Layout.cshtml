<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Candy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/prodotto.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid navcandy">
                <!--<a class="navbar-brand" asp-area="" asp-page="/Index">Candy</a>-->
                <a class="navbar-brand" asp-page="/Index">
                    <img class="logoimg" src="~/images/logo_CANDY_MARKET.png" />
                </a>
                <div class="flex-row-reverse">
                    <ul class="nav">
                        <li class="nav-item">
                            <!--<a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>-->
                            <a class="navbar-brand">
                                <img class="shopcartimg" src="~/images/shop_cart_icon.png" />
                            </a>
                        </li>
                        <li class="nav-item">
                            <!--<a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>-->
                            <a class="navbar-brand">
                                <img class="adminimg" src="~/images/admin_icon.png" />
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid d-block">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Candy - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>