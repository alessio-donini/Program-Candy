<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- importa il file CSS-->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="~/css/prodotto.css" />
    <link rel="stylesheet" href="~/css/accesso.css" />
    <link rel="stylesheet" href="~/css/carrello.css" />
    <link rel="stylesheet" href="~/css/amministrazione.css" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->

    <title>@ViewData["Title"] - Candy</title>
</head>

<body class="body">
    <header>
        <nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid navcandy">
                <a class="navbar-brand" asp-page="/Index">
                    <img class="logoimg" src="~/images/logo_CANDY_MARKET.png" />
                </a>
                <div class="flex-row-reverse">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="img-fluid navbar-brand" asp-page="/Carrello">
                                <img class="shopcartimg" src="~/images/shop_cart_icon.png" />
                            </a>
                        </li>
                        <li class="nav-item">
                            @if (Startup.adminRole)//controlla se l'utente ha fatto l'accesso
                            {
                                <a class="img-fluid navbar-brand" asp-page="/Amministrazione">
                                    <img class="adminimg" src="~/images/admin_icon.png" />
                                </a>
                            }
                            else
                            {
                                <a class="img-fluid navbar-brand" asp-page="/Accesso">
                                    <img class="adminimg" src="~/images/admin_icon.png" />
                                </a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid d-block">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <!--<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>-->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
<footer class="footer">
    Candy Market | Via Roma - 45 100 Rovigo (RO) ITALIA <br>
    <a class="trans-color-text" href="#">info@candymarket.it</a> | <span itemprop="telephone"><a href="#">+39 123 45 67 890</a></span>
    <br><a target="_blank" href="#"> privacy</a> | <a target="_blank" href="#"> cookie policy</a>

    <div class="social-cont">
        <ul class="social-list">

            <li><a target="_blank" href="#"><img id="image" src="/images/instagram logo.png"class="/images/instagram logo.png"></a></li>
            <li><a target="_blank" href="#"><img id="image" src="/images/twitter logo.png" title="Instagram" alt="Instagram icon"></a></li>
            <li><a target="_blank" href="#"><img id="image" src="/images/facebook logo.png" title="pinterest" alt="Instagram icon"></a></li>

        </ul>
        <div class="floatstop"></div>
    </div>
    Designed by<br>
    <div class="credits">
        <a target="_blank" href="#"><img width="100" src="/images/logo_CANDY_MARKET.png" title="#" alt="#"></a>
    </div>

</footer>

</html>